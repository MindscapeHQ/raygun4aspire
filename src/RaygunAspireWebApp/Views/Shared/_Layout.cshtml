<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - RaygunAspireWebApp</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/theme-default.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/utility-styles.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/RaygunAspireWebApp.styles.css" asp-append-version="true" />
</head>
<body class="background--color-main-background">
  <header>
    <nav class="background--color-bg-surface-header-strip display--flex flex-direction--row gap--8 height--48">
              <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RaygunAspireWebApp</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                      aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
                      <div>
                          <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                      </div>
                      <div>
                          <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                      </div>
      </nav>
  </header>
  <div class="container">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="background--color-bg-surface-footer height--48 position--absolute bottom--0 align-items--center display--flex width--full text-muted">
    <div class="container">
      &copy; 2024 - Raygun
    </div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
